generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


//purplecat gpt app:
model Tour{
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  city String
  country String
  title String
  description String @db.Text
  image String? @db.Text
  stops Json
  @@unique([city, country])

}
//purplecat gpt app:
model Token{
  clerkId String @id
  tokens Int @default (10000)
}



model task{
  id String @id @default(uuid())
  clerkId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title    String
  note   String
  location  String
  status      String
  mode     String
}
